/* pages/index/pc/person.wxss */
.scroll-wrapper {
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  background: #FFF;
  height: 90rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}


swiper {
  min-height: calc(100vh - 100rpx);
}
.swiper-item {
  width: 100%;
  text-align: center;
  padding: 32rpx 0;
}

